{
    "id": "org.scarlett.ScarlettOSBase",
    "command": "/usr/bin/bash",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "finish-args": [
        /* Allow access to developer tools */
        "--allow=devel",
        "--talk-name=org.freedesktop.Flatpak",
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        /* We want full fs access */
        "--filesystem=host",
        /* Needs to talk to the network: */
        "--share=network",
        "--talk-name=org.gtk.vfs.*"
    ],
    "cleanup": [ "/cache",
                 "/include",
                 "/lib/pkgconfig",
                 "/man",
                 "/share/aclocal",
                 "/share/devhelp",
                 "/share/gir-1.0",
                 "/share/gtk-doc",
                 "/share/man",
                 "/share/pkgconfig",
                 "/share/vala",
                 "/lib/systemd",
                 "*.la",
                 "*.a" ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "modules": [
        {
            "name": "cpython",
            "post-install": [
                /* These are needed for the triggers */
                "/app/bin/python3 -m pip install --no-cache-dir --upgrade --ignore-installed --force-reinstall pip setuptools==36.0.1 wheel==0.29.0"
            ],
            "build-options": {
                "build-args": [
                    "--share=network",
                    "--allow=devel"
                ],
                "config-opts": [
                    "--enable-loadable-sqlite-extensions",
                    "--enable-shared",
                    "--with-pydebug"
                ],
                "cflags": "-O0 -g",
                "cxxflags": "-O0 -g",
                "env": {
                    "GST_PLUGIN_SYSTEM_PATH": "/app/lib/gstreamer-1.0/",
                    "FREI0R_PATH": "/app/lib/frei0r-1/",
                    "GSTREAMER": "1.0",
                    "ENABLE_PYTHON3": "yes",
                    "ENABLE_GTK": "yes",
                    "PYTHON_VERSION": "3.5",
                    "CC": "gcc",
                    "V": "1"
                },
                "strip": false,
                "no-debuginfo": false
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.python.org/ftp/python/3.5.2/Python-3.5.2.tar.xz",
                    "sha256": "0010f56100b9b74259ebcd5d4b295a32324b58b517403a10d1a2aa7cb22bca40"
                }
            ]
        }
    ]
}
